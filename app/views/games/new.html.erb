<h1>Games#new</h1>
<br>
<% @letters.each do |letter| %>
  <div class="letter"><%= letter %></div>
<% end %>

<p class="question">What is the longest word you can find?</p>
<form action="/score" method = "post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type your word">
  <input type="hidden" value="<%= @letters.join %>" name="letters">
  <input type="hidden" value="<%= @start_time %>" name="start_time">
  <input type="submit" value="Play!">
</form>
